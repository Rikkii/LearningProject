<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.tinkoff.fintech.lesson4.dao.CourseRepository">

    <insert id="save1" parameterType="ru.tinkoff.fintech.lesson4.model.Course">
        INSERT INTO courses (course_id, name2, description)
        VALUES (#{course_id}, #{name2}, #{description})
    </insert>

    <select id="findAll" resultMap="CourseMap">
        SELECT *
        FROM courses
    </select>

    <resultMap id="CourseMap" type="ru.tinkoff.fintech.lesson4.model.Course">
        <result property="course_id" column="course_id"/>
        <result property="name2" column="name2"/>
        <result property="description" column="description"/>
    </resultMap>
</mapper>